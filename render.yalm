databases:
  - name: gestion app
    plan: free
    databaseName: gestion_app
    user: gestion_app_user

services:
  - type: web
    plan: free
    name: sistema
    runtime: python
    buildCommand: "./build.sh"
    startCommand: "python -m gunicorn sistema.asgi:application -k uvicorn.workers.UvicornWorker"    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: gestion_app
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: WEB_CONCURRENCY
        value: 4
